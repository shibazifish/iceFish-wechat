/* pages/prize/prize.wxss */
page {
  width: 100%;
  height: 100%;
  color: #333;
}

.top {
  margin: 30rpx 50rpx;
  text-align: left;
  height: 130rpx;
}

.top .txt {
  line-height: 130rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6600;
}
.content {
  margin: auto;
  width: 700rpx;
  height: 800rpx;
}
.box {
  height: 420rpx;
  width: 320rpx;
  margin: 10rpx;
  position: relative;
  display: inline-block;
  background-color: white;
  box-shadow: 5rpx 5rpx 30rpx gainsboro;
  border-radius: 10rpx;
  border: 1px solid rgb(120, 215, 221);
}
.img {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 280rpx;
  height: 250rpx;
}
.name {
  position: absolute;
  left: 65rpx;
  bottom: 80rpx;
  color: #333;
  border-bottom: 1rpx solid rgb(120, 215, 221);
  font-weight: 500;
  line-height: 50rpx;
  font-size: 32rpx;
}
.desc {
  color: #999;
  line-height: 50rpx;
  font-size: 25rpx;
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
}
.charge {
  position: absolute;
  width: auto;
  height: 50rpx;
  left: 20rpx;
  bottom: 13rpx;
}
.ice-fish {
  position: absolute;
  left: 0;
  height: 50rpx;
  width: 50rpx;
}
.price {
  color: #6d9edf;
  line-height: 50rpx;
  font-size: 32rpx;
  width: auto;
  height: 40rpx;
  position: absolute;
  left: 55rpx;
}
.example {
  display: block;
  width: 100%;
  height: 100rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}