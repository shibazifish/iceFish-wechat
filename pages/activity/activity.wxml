<!--pages/activity/activity.wxml-->
<view class="a-section a-new" wx:if="{{goodsInfo.length > 0}}">
    <view class="h">
          <text class="txt">十二月活动震撼来袭</text>
    </view>
    <view class="b">
      <view class="item" wx:for="{{goodsInfo}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.goods_id}}">
        <navigator url="../activityDetail/activityDetail?id={{item.goods_id}}">
          <!-- <image class="img" src="{{item.list_pic_url}}" background-size="cover"></image> -->
          <text class="name">{{item.goods_name}}</text>
          <text class="price">库存：{{item.goods_num}}个 冰块{{item.goods_ice}}块</text>
        </navigator>
      </view>
    </view>
    <button bindtap='onShareAppMessage' open-type="share">邀请好友</button>
  </view>