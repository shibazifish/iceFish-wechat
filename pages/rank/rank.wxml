<!--pages/rank/rank.wxml-->
<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                  <view class="a">
                    <view class="item" wx:for="{{allRanks}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.openId}}">
                        <image class="img" src="{{item.avatarUrl}}" background-size="cover"></image>
                            <text class="name">{{item.nickName}}</text>
                            <text class="desc">{{item.run_data}}</text>
                            <text class="price">{{item.iceData}}</text>
                    </view>
                  </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                  <view class="b">
                    <view class="item" wx:for="{{yesterdayRanks}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.openId}}">
                        <image class="img" src="{{item.avatarUrl}}" background-size="cover"></image>
                            <text class="name">{{item.nickName}}</text>
                            <text class="desc">{{item.run_data}}</text>
                            <text class="price">{{item.iceData}}</text>
                    </view>
                  </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                  <view class="page__bd">
                    <view class="weui-grids">
                      <block wx:for="{{nowRanks}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.openId}}">
                        <image class="weui-grid__icon" src="{{item.avatarUrl}}" />
                        <view class="weui-grid__label">{{item.nickName}}</view>
                        <view class="weui-grid__label">{{item.run_data}}</view>
                        <view class="weui-grid__label">{{item.iceData}}</view>
                      </block>
                    </view>
                  </view>
                </view>
            </view>
        </view>
    </view>
</view>
